<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:elevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.App.CardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.App.SecondaryCardView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stage 0-0"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congratulations!"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"

                app:layout_constraintTop_toBottomOf="@id/subCard"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backBtn"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/background"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:icon="@drawable/ic_baseline_keyboard_backspace_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="48dp"
                    app:iconTint="@color/colorPrimaryDark"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.Button.Circle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/restartBtn"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:backgroundTint="@color/background"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:icon="@drawable/ic_baseline_replay_24"
                    app:iconTint="@color/colorPrimaryDark"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="48dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.Button.Circle" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextBtn"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:backgroundTint="@color/background"

                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:icon="@drawable/ic_baseline_play_arrow_24"
                    app:iconTint="@color/colorPrimaryDark"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="48dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.Button.Circle" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>