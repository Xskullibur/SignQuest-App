<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="sg.edu.nyp.signquest.start.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment" />
        <action
            android:id="@+id/action_startFragment_to_playerToSignFragment"
            app:destination="@id/playerToSignFragment" />
    </fragment>
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="sg.edu.nyp.signquest.start.TutorialFragment"
        android:label="fragment_tutorial"
        tools:layout="@layout/fragment_tutorial" />
    <fragment
        android:id="@+id/playerToSignFragment"
        android:name="sg.edu.nyp.signquest.game.PlayerToSignFragment"
        android:label="fragment_player_to_sign"
        tools:layout="@layout/fragment_player_to_sign" />
</navigation>